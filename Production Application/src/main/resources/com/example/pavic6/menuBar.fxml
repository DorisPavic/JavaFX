<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pavic6.MenuController">
    <MenuBar prefHeight="25.0" prefWidth="885.0" GridPane.columnSpan="2">
        <menus>
         <Menu mnemonicParsing="false" text="Home">
            <items>
               <MenuItem mnemonicParsing="false" onAction="#showHome" text="Go Home" />
            </items>
         </Menu>
            <Menu mnemonicParsing="false" text="Item">
                <items>
                    <MenuItem mnemonicParsing="false" onAction="#showItemAddScreen" text="Add" />
               <MenuItem mnemonicParsing="false" onAction="#showItemSearchScreen" text="Search" />
                </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Category">
                <items>
               <MenuItem mnemonicParsing="false" onAction="#showCategoryAddScreen" text="Add" />
                    <MenuItem mnemonicParsing="false" onAction="#showCategorySearchScreen" text="Search" />
                </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Factory">
                <items>
               <MenuItem mnemonicParsing="false" onAction="#showFactoryAddScreen" text="Add" />
                    <MenuItem mnemonicParsing="false" onAction="#showFactorySearchScreen" text="Search" />
                </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Store">
                <items>
               <MenuItem mnemonicParsing="false" onAction="#showStoreAddScreen" text="Add" />
                    <MenuItem mnemonicParsing="false" onAction="#showStoreSearchScreen" text="Search" />
                </items>
            </Menu>
        </menus>
    </MenuBar>

</AnchorPane>
